# ── Supabase ──────────────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key          # Required for webhooks & API key auth

# ── Stripe ────────────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_...                             # Required for checkout & billing
STRIPE_WEBHOOK_SECRET=whsec_...                           # Required for subscription webhooks
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...            # Required for client-side Stripe.js

# ── Scanner Authentication ────────────────────────────────────────────────
SCANNER_SECRET_KEY=your_scanner_secret_key_here           # Required: shared secret for edge functions

# ── Cookie Signing ────────────────────────────────────────────────────────
COOKIE_SIGNING_SECRET=random_64_char_hex_string           # Required: HMAC signing for waitlist cookie

# ── Field Encryption ─────────────────────────────────────────────────────
# AES-256-GCM key for encrypting sensitive fields (e.g. supabase_pat) at rest.
# Must be exactly 64 hex characters (32 bytes). Generate with: openssl rand -hex 32
# If not set, falls back to a key derived from SUPABASE_SERVICE_ROLE_KEY.
ENCRYPTION_KEY=

# ── Threat Intelligence APIs (optional, enhance scan depth) ───────────────
GOOGLE_SAFE_BROWSING_API_KEY=
GOOGLE_PAGESPEED_API_KEY=
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=
URLSCAN_API_KEY=

# ── GitHub Deep Scan (optional) ───────────────────────────────────────────
# Needs scopes: repo, security_events (for github-security-scanner)
# Without security_events, Code Scanning alerts will be unavailable.
GITHUB_TOKEN=ghp_...

# ── AI Scanner (optional, powers vibe-scanner) ────────────────────────────
GEMINI_API_KEY=

{
    "framework": "nextjs",
    "outputDirectory": ".next",
    "redirects": [
        {
            "source": "/:path(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "checkvibe.online"
                }
            ],
            "destination": "https://checkvibe.dev/:path",
            "permanent": true
        },
        {
            "source": "/:path(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "www.checkvibe.online"
                }
            ],
            "destination": "https://checkvibe.dev/:path",
            "permanent": true
        }
    ],
    "crons": [
        {
            "path": "/api/cron/scheduled-scans",
            "schedule": "0 0 * * *"
        },
        {
            "path": "/api/cron/threat-alerts",
            "schedule": "*/5 * * * *"
        }
    ]
}
